<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Material"
    android:background="@android:color/white">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:subtitleTextColor="@color/black"
        app:subtitle="Current Credits 50.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Add Credits"
        android:elevation="@dimen/_5sdp"
        app:titleTextColor="@color/black"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:background="@color/white"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="20dp"
        android:hint="Enter Amount"
        android:id="@+id/input_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/primary"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content"
            android:id="@+id/payment_amount"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <CheckBox
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/agreement_box"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:weightSum="3"
    android:padding="@dimen/_10ssp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:orientation="horizontal">
    <Button
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/first_product"
        android:layout_marginRight="@dimen/_5ssp"
        android:fontFamily="@font/roboto_medium"
        android:elevation="@dimen/_5sdp"
        android:text="£50"
        android:textColor="@color/black"
        android:inputType="text"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:gravity="center"
        android:background="@drawable/round_backgroud_white"
        />
    <Button
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/second_product"
        android:layout_marginRight="@dimen/_5ssp"
        android:text="£100"
        android:textColor="@color/black"
        android:inputType="text"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:elevation="@dimen/_5sdp"
        android:background="@drawable/round_backgroud_white"
        />
    <Button
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/third_product"
        android:text="£150"
        android:textColor="@color/black"
        android:inputType="text"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:gravity="center"
        android:background="@drawable/round_backgroud_white"
        android:fontFamily="@font/roboto_medium"
        />


</LinearLayout>
    <TextView
        android:clickable="true"
        android:focusable="true"
        android:background="?android:selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:alpha="0.8"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/roboto_light"
        android:text="Transaction charges for Google play can effect your amount to be transfered!"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/Red"
        />
</LinearLayout>
</layout>
