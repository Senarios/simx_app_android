                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/idLoginTerms1"
                android:text=" Signup"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
