<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@android:color/white"    android:clickable="true"
    android:weightSum="13"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        >

        <TextView
            android:id="@+id/plzGuideTitle_ID3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Scottish Health"
            android:textColor="@color/primary"
            android:textSize="34sp"
            tools:textColor="@color/primary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:weightSum="2"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/call_type"
        android:text="Voice"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="16dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secret_no_tv_ID"
        android:text="Your mobile number won't be shared"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_weight="1"
        />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        ></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <TextView
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/service_type"
            android:text="Calling for Translator on demand"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_gravity="center"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
        android:weightSum="4"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/field1"
            android:text="English"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="invisible"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/to_tv_ID"
            android:text="To"
            android:textSize="12dp"
            android:visibility="invisible"
            android:gravity="center"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/field2"
            android:text="Urdu"
            android:visibility="invisible"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:gravity="center"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:weightSum="9"
        android:gravity="center"
        >


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/disconnect_button_ID"
            android:text="Disconnect"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:inputType="text"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_weight="7"
            android:src="@drawable/ic_call_end"
            />

    </LinearLayout>


</LinearLayout>